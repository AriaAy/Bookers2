<!--  新規投稿表示  -->

<h2 class="mt-3">New book</h2>

<!--  バリデーションによるエラーメッセージ  -->
<% if book.errors.any? %>
  <%= book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: Book.new, url: books_path, local:true do |f| %>

  <div class="from-group">
    <label for="book_title">Title</label>
    <br><%= f.text_field :title, class: "from-control book_title" %>
  </div>

  <div class="from-group">
    <label for="book_opinion">Opinion</label>
    <br><%= f.text_area :body, class: "from-control book_body" %>
  </div>

  <div class="from-group">
    <%= f.submit "Create Book", class: "btn btn-sm btn-success" %>
  </div>

<% end %>