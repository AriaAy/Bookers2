<!--  投稿一覧画面  -->

<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <!--  User infoのテンプレート  -->
      <%= render 'users/user_info', user: @user %>

      <!--  New bookのテンプレートを入れる  -->
      <%= render 'books/new_book', book: @book %>
    </div>

    <div class="col-me-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>