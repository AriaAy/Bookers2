  <!--  新規投稿表示  -->
<h1>New book</h1>

<!--  バリデーションによるエラーメッセージ  -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: books_path, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4></h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>

<% end %>
