<!--  投稿編集画面  -->



<h1>Editing Book</h1>

<!--  バリデーションによるエラーメッセージ  -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label>Title</label>
    <div><%= f.text_field :title %></div>
  </div>

  <div class="field">
    <label>Opinion</label>
    <div><%= f.text_area :body %></div>
  </div>

  <div class="field">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<% link_to 'Show', book_path %>
<span>|</span>
