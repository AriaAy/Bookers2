<!--  user info編集画面  -->

<h1>User info</h1>
<%= form_with model: @user do |f| %>

  <div class="field">
    <label>Name</label>
    <div><%= f.text_field :name %></div>
  </div>

  <div class="field">
    <label>Image</label>
    <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
  </div>


  <div class="field">
    <label>Introduction</label>
    <div><%= f.text_area :inputIntroduction %></div>
  </div>

  <div class="field">
    <%= f.submit "Update User" %>
  </div>

<% end %>

