<!--  user編集画面  -->

<h1>User info</h1>

<!--  バリデーションによるエラーメッセージ  -->
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>
  <br>
  <h4>Image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <br>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <br>
  <%= f.submit "Update User" %>

<% end %>

