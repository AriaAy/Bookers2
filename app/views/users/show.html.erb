<!--  ユーザー詳細ページ  -->
<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>

<p>name</p>
<span><%= @user.name %></span>

<P>introduction</P>
<span><%= @user.introduction %></span>

<%=link_to "Edit", edit_user_path(@user.id) %>


<!--  新規投稿表示  -->
<h1>New book</h1>
<!--  バリデーションによるエラーメッセージ  -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: books_path, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>

<% end %>



<!--  投稿一覧画面  -->
<body>
  <h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_user_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>
</body>

